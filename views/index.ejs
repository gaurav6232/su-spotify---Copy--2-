 <!DOCTYPE html>
 <html lang="en">
 <head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title> 
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
 </head>
 <body>
    <div id="main">
        <div class="left">
            <button>
                <i class="ri-home-4-fill"></i>
                <p>Home</p>
            </button>

            <button>
                <a href="/search">
                    <i class="ri-search-2-line"></i>
                    <p>Search</p>
                </a>
            </button>

            
            <button>
                <a href="/streaming">
                    <i class="ri-heart-line"></i>
                    <p>likes</p>
                </a>
            </button>
        </div>
        <div class="right">
            <div class="musics">
                <% currentUser.playlist[0].songs.forEach(song=>{ %>                    
                    <div class="song" id="tg" onclick="songCardClicked('<%=song.filename%>')">
                        <img src="/poster/<%= song.poster %>" alt="">
                        <div class="text">
                            <h5><%= song.title %></h5>
                            <p><%= song.artist %></p>
                            <p><%= song.album %></p>
                        </div>

                    <div class="playButton">
                        <i class="ri-play-circle-fill"></i>
                        
                    </div>
                </div>
                <%})%>
            </div>
            <audio src="/stream/566963b2da51097eedb014c3fbcc69da13115f35" controls></audio>
        </div>

         
    </div>

    <script>
     function songCardClicked(filename){
        document.querySelector('audio').setAttribute('src',`/stream/${filename}`)
        document.querySelector('audio').play()
     }

      function songCardClicked(filename) {
    // Use JavaScript to navigate to the playback route with the selected musicName
    const musicName = encodeURIComponent(filename);
    window.location.href = `/play/${musicName}`;
  }


      
    </script>
</body>
</html>